<?xml version="1.0"?>
<!-- HAMMURABI PARAMETER SET VERSION 2.5.0-->
<!-- the XML format helps us visualizing and maintaining parameters comprehensively -->
<root>
	<!-- the very 1st level entries under "root" should always exist -->
    	<!-- dispensable entries are marked with "(optional)" -->
    	<!-- output file names can have suffixes either as '.bin' or '.fits' -->
	<obsio> <!-- observables I/O, frequency in GHz -->
		<!-- in/out-put files in ham_float (defined in hamtype.h) binary format -->
        	<!-- the existance of an entry triggers corresponding in/output routine -->
        	<!-- HEALPix Nside is used by default, the nside attributes marks the final output resolution -->
		<dm filename="dm.bin" nside="8"/> <!-- Dispersion Measure (optional) -->
		<faraday filename="fd.bin" nside="64"/> <!-- Faraday depth (optional) -->
        	<!-- simultaneous synchrotron emission production at multiple frequencies is allowed -->
		<sync freq="30" filename="sync_30.bin" nside="16"/> <!-- synchrotron dmission (optional) -->
		<sync freq="1.4" filename="sync_1.4.bin" nside="32"/> <!-- synchrotron dmission (optional) -->
        	<!-- the mask map is universally applied to all observable outputs -->
        	<!-- mask map is an input, DO NOT uncomment the following entry if no mask map is prepared -->
        	<!-- a simple mask map preparation Python script can be found in the template directory -->
		<!-- mask filename="mask.bin" nside="32"/ --> <!-- mask (optional) -->
	</obsio>
	
	<fieldio> <!-- physical fields I/O -->
		<!-- "read" & "write" are boolean buttons for turnning on reading & writing routine -->
        	<!-- it is possible to do reading followed by writing procedure -->
        	<!-- in/out-put files in ham_float (defined in hamtype.h) binary format -->
        	<!-- in/out-put file names must have suffixes '.bin' -->
		<bfield read="0" write="0" filename="bfield.bin"/> <!-- magnetic field (optional) -->
		<tefield read="0" write="0" filename="tefield.bin"/> <!-- thermal electron field (optional) -->
		<crefield read="0" write="0" filename="crefield.bin"/> <!-- cosmic ray electron field (optional) -->
	</fieldio>
	
	<grid> <!-- field & observable grid -->
		<!-- 3-4D galactic-centric Cartesian field grids are supported -->
        	<!-- which means the galaxy center is located at the center of each grid -->
		<observer> <!-- galactic-centric position of observer -->
			<x value="-8.3"/> <!-- kpc -->
			<y value="0"/> <!-- kpc -->
			<z value="0.006"/> <!-- kpc -->
		</observer>
		
		<bfield> <!-- magnetic field grid (optional if <bfield read="0" write="0" .../>) -->
			<!-- grid vertex size (number of total vertices) -->
			<nx value="200"/> <!-- -->
			<ny value="200"/> <!-- -->
			<nz value="80"/> <!-- -->
			<!-- box size, in galactic-centric frame -->
			<x_min value="-20.0"/> <!-- kpc -->
			<x_max value="20.0"/> <!-- kpc -->
			<y_min value="-20.0"/> <!-- kpc -->
			<y_max value="20.0"/> <!-- kpc -->
			<z_min value="-4.0"/> <!-- kpc -->
			<z_max value="4.0"/> <!-- kpc -->
		</bfield>
		
		<tefield> <!-- thermal electron field grid (optional if <tefield read="0" write="0" .../>) -->
			<!-- grid vertex size -->
			<nx value="200"/> <!-- -->
			<ny value="200"/> <!-- -->
			<nz value="80"/> <!-- -->
			<!-- box size, in galactic-centric frame -->
			<x_min value="-20.0"/> <!-- kpc -->
			<x_max value="20.0"/> <!-- kpc -->
			<y_min value="-20.0"/> <!-- kpc -->
			<y_max value="20.0"/> <!-- kpc -->
			<z_min value="-4.0"/> <!-- kpc -->
			<z_max value="4.0"/> <!-- kpc -->
		</tefield>
		
		<crefield> <!-- CRE field grid (optional if <crefield read="0" write="0" .../>) -->
			<!-- grid vertex size -->
			<nz value="80"/> <!-- -->
			<nx value="80"/> <!-- -->
			<ny value="80"/> <!-- -->
			<ne value="80"/> <!-- -->
			<!-- box size, in galactic-centric frame -->
			<x_min value="0.0"/> <!-- kpc -->
			<x_max value="0.0"/> <!-- kpc -->
			<y_min value="0.0"/> <!-- kpc -->
			<y_max value="0.0"/> <!-- kpc -->
			<z_min value="-4.0"/> <!-- kpc -->
			<z_max value="4.0"/> <!-- kpc -->
            		<!-- CRE grid requires another energy coordinate -->
			<!-- e_max = e_min*exp(ne*e_fact) -->
            		<!-- by definition, e_min cannot be 0 -->
			<e_min value="0.1"/> <!-- GeV -->
			<e_max value="100.0"/> <!-- GeV -->
		</crefield>
        
		<shell type="auto"> <!-- spherical line-of-sight integration shells -->
            		<!-- the shell type attribute above should be either "auto" or "manual" -->
            		<!-- galactic-centric (spherical frame) radial limits -->
            		<gc_r_min value="0.0"/> <!-- kpc -->
            		<gc_r_max value="20.0"/> <!-- kpc -->
            		<!-- galactic-centric (cylindric frame) height limits -->
            		<gc_z_min value="-10.0"/> <!-- kpc -->
            		<gc_z_max value="10.0"/> <!-- kpc -->
            		<!-- observer-centric (spherical frame) radial limits -->
            		<oc_r_min value="0.0"/> <!-- kpc -->
            		<oc_r_max value="30.0"/> <!-- kpc -->
            		<!-- observer-centric (spherical frame) integratal resolution -->
            		<oc_r_res value="0.01"/> <!-- kpc -->
            		<!-- algorithms of the shell arrangement can be found in ApJS 247 18 -->
			<!-- automatic shell dividing -->
			<auto>
				<shell_num value="1"/> <!-- total shell number -->
				<nside_sim value="32"/> <!-- lowest shell nside -->
			</auto>
			<!-- manual shell dividing -->
			<manual>
                		<!-- the total shell number calculated automatically -->
                		<!-- set shell cutting point from inside out -->
                		<!-- the cut values are the fractions of maximal observer-centric radius -->
				<cut value="0.5"/> <!-- shell dividing position -->
                		<!-- set shell resolution from inside out -->
				<nside_sim value="32"/>
				<nside_sim value="64"/>
			</manual>
		</shell>
        
	</grid>
	
	<bmodel> <!-- magnetic field models -->
		<!-- model component can be activated by the boolean button: cue="1" -->
        	<!-- in v2.5+, superposition of field models is allowed -->
		<unif cue="1"> <!-- uniform field (optional) -->
			<bp value="2.0"/> <!-- parallel, microG -->
			<bv value="0.0"/> <!-- vertical, microG -->
			<l0 value="70"/> <!-- longitude, deg -->
		</unif>

		<cart cue="0"> <!-- uniform field (optional) -->
        		<bx value="1.0"/> <!-- in x direction, microG -->
        		<by value="0.0"/> <!-- in y direction, microG -->
        		<bz value="0.0"/> <!-- in z direction, microG -->
     		</cart>
     		
		<helix cue="0"> <!-- Helical field (optional) -->
        		<bx value="1.0"/> <!-- scaling of helix in x direction (bx*cos(phi)), microG -->
        		<by value="1.0"/> <!-- scaling of helix in y direction (by*sin(phi)), microG -->
			<bz value="0.0"/> <!-- scaling of helix in z direction (bz*phi), microG -->
			<r_min value="3.0"/> <!-- inner radius of helix, kpc -->
			<r_max value="5.0"/> <!-- outer radius of helix, kpc -->
     		</helix>
		
		<lsa cue="0"> <!-- logrithmic-spiral-arm (optional) -->
			<b0 value="1.2"/> <!-- microG -->
			<psi0 value="27.0"/> <!-- deg -->
			<psi1 value="0.9"/> <!-- deg -->
			<chi0 value="25.0"/> <!-- deg -->
		</lsa>
		
		<jaffe cue="0"> <!-- Jaffe field (optional) -->
			<quadruple cue="0"/> <!-- quadruple pattern in halo -->
			<bss cue="0"/> <!-- bi-symmetric -->
			<disk_amp value="0.167"/> <!-- disk amplitude, microG -->
			<disk_z0 value="0.1"/> <!-- disk height scale, kpc -->
			<halo_amp value="1.38"/> <!-- halo amplitude, microG -->
			<halo_z0 value="3.0"/> <!-- halo height scale, kpc -->
			<r_inner value="0.5"/> <!-- inner R scale, kpc -->
			<r_scale value="20"/> <!-- R scale, kpc -->
			<r_peak value="0"/> <!-- R peak, kpc -->
			<ring cue="0"/> <!-- molecular ring -->
			<bar cue="1"/> <!-- elliptical bar -->
			<!-- either ring or bar -->
			<ring_amp value="0.023"/> <!-- ring field amplitude, microG -->
			<ring_r value="5.0"/> <!-- ring radius, kpc -->
			<bar_amp value="0.023"/> <!-- bar field amplitude, microG -->
			<bar_a value="5.0"/> <!-- major scale, kpc -->
			<bar_b value="3.0"/> <!-- minor scale, kpc -->
			<bar_phi0 value="45.0"/> <!-- bar major direction -->
			<arm_num value="4"/> <!-- spiral arms -->
			<arm_r0 value="7.1"/> <!-- arm ref radius -->
			<arm_z0 value="0.1"/> <!-- arm heigth scale, kpc -->
			<arm_phi1 value="70"/> <!-- arm ref angles, deg -->
			<arm_phi2 value="160"/>
			<arm_phi3 value="250"/>
			<arm_phi4 value="340"/>
			<arm_amp1 value="2"/> <!-- arm field amplitudes, microG -->
			<arm_amp2 value="0.133"/>
			<arm_amp3 value="-3.78"/>
			<arm_amp4 value="0.32"/>
			<arm_pitch value="11.5"/> <!-- pitch angle, deg -->
			<comp_c value="0.5"/> <!-- compress factor -->
			<comp_d value="0.3"/> <!-- arm cross-sec scale, kpc -->
			<comp_r value="12"/> <!-- radial cutoff scale, kpc -->
			<comp_p value="3"/> <!-- cutoff power -->
		</jaffe>
		
		<es cue="0" seed="0"> <!-- Ensslin-Steininger field (optional) -->
			<rms value="0.8"/> <!-- RMS -->
			<k0 value="10.0"/> <!-- injection, 1/(Lambda in kpc) -->
			<k1 value="0.1"/> <!-- inverse cascading cutoff, 1/(Lambda in kpc) -->
			<a0 value="1.7"/> <!-- 5/3, Kolmogorov -->
			<a1 value="0.0"/> <!-- inverse cascade -->
			<rho value="1.0"/> <!-- [0,infinity] -->
			<!-- energy density rescaling -->
			<r0 value="8.0"/> <!-- in kpc -->
			<z0 value="1.0"/> <!-- in kpc -->
		</es>
		
		<mhd cue="0" seed="0"> <!-- compressible MHD approximation (optional) -->
			<pa0  value="1"/> <!-- Alfven power norm at k0 -->
			<pf0 value="1"/> <!-- fast power norm at k0 -->
			<ps0 value="1"/> <!-- slow power norm at k0 -->
			<k0 value="10.0"/> <!-- injection, 1/(Lambda in kpc) -->
			<aa0 value="1.7"/> <!-- Kolmogorov -->
			<af0 value="1.5"/>
			<as0 value="1.7"/>
			<k1 value="0.1"/> <!-- inverse cascading cutoff, 1/(Lambda in kpc) -->
			<a1 value="0.0"/> <!-- inverse cascade -->
			<beta value="0.1"/> <!-- plasma beta -->
			<ma value="0.5"/> <!-- Alfven Mach number -->
		</mhd>
		
	</bmodel>
	
	<temodel> <!-- thermal electron field models -->
        	<!-- model component can be activated by the boolean button: cue="1" -->
        	<!-- in v2.5+, superposition of field models is allowed -->
		<unif cue="1"> <!-- uniform (optional) -->
			<n0 value="0.01"/> <!-- pccm -->
			<r0 value="3.0"/> <!-- kpc -->
		</unif>
		
		<ymw16 cue="0"> <!-- YMW16 (optional) -->
			<warp>
				<r_warp value="8.4"/> <!-- galactic warp, kpc -->
				<gamma_w value="0.14"/> <!-- warp ratio -->
				<r0 value="8.3"/> <!-- Sun radial position, kpc -->
			</warp>
			<thickdisk>
				<ad value="2500"/> <!-- -->
				<bd value="15000"/> <!-- -->
				<n1 value="0.01132"/> <!-- -->
				<h1 value="1673"/> <!-- -->
			</thickdisk>
			<thindisk>
				<a2 value="1200"/> <!-- -->
				<b2 value="4000"/> <!-- -->
				<n2 value="0.404"/> <!-- -->
				<k2 value="1.54"/> <!-- -->
			</thindisk>
			<spiralarm> <!-- using HH14 SpiralArms -->
				<b2s value="4000"/> <!-- -->
				<ele_arm_0 value="0.135000"/> <!-- electron density norm, cm^-3 -->
				<ele_arm_1 value="0.129000"/> <!-- electron density norm, cm^-3 -->
				<ele_arm_2 value="0.103000"/> <!-- electron density norm, cm^-3 -->
				<ele_arm_3 value="0.116000"/> <!-- electron density norm, cm^-3 -->
				<ele_arm_4 value="0.005700"/> <!-- electron density norm, cm^-3 -->
				<wid_arm_0 value="300"/> <!-- typical arm width, pc -->
				<wid_arm_1 value="500"/> <!-- typical arm width, pc -->
				<wid_arm_2 value="300"/> <!-- typical arm width, pc -->
				<wid_arm_3 value="500"/> <!-- typical arm width, pc -->
				<wid_arm_4 value="300"/> <!-- typical arm width, pc -->
				<rref_arm_0 value="3.35"/> <!-- arm reference radius, kpc -->
				<rref_arm_1 value="3.707"/> <!-- arm reference radius, kpc -->
				<rref_arm_2 value="3.56"/> <!-- arm reference radius, kpc -->
				<rref_arm_3 value="3.670"/> <!-- arm reference radius, kpc -->
				<rref_arm_4 value="8.21"/> <!-- arm reference radius, kpc -->
				<phiref_arm_0 value="44.4"/> <!-- arm reference azimuthal angle, deg -->
				<phiref_arm_1 value="120.0"/> <!-- arm reference azimuthal angle, deg -->
				<phiref_arm_2 value="218.6"/> <!-- arm reference azimuthal angle, deg -->
				<phiref_arm_3 value="330.3"/> <!-- arm reference azimuthal angle, deg -->
				<phiref_arm_4 value="55.1"/> <!-- arm reference azimuthal angle, deg -->
				<pitch_arm_0 value="11.43"/> <!-- arm pitch angle, deg -->
				<pitch_arm_1 value="9.84"/> <!-- arm pitch angle, deg -->
				<pitch_arm_2 value="10.38"/> <!-- arm pitch angle, deg -->
				<pitch_arm_3 value="10.54"/> <!-- arm pitch angle, deg -->
				<pitch_arm_4 value="2.77"/> <!-- arm pitch angle, deg -->
				<aa value="11680"/>
				<ka value="5.015"/>
				<ncn value="2.4"/>
				<wcn value="8.2"/>
				<thetacn value="109"/>
				<nsg value="0.626"/>
				<wsg value="20"/>
				<thetasg value="75.8"/>
			</spiralarm>
			<galcenter>
				<ngc value="6.2"/>
				<agc value="160"/>
				<hgc value="35"/>
			</galcenter>
			<gumnebula>
				<ngn value="1.84"/>
				<wgn value="15.1"/>
				<agn value="125.8"/>
				<kgn value="1.4"/>
			</gumnebula>
			<localbubble>
				<j_lb value="0.480"/>
				<nlb1 value="1.094"/>
				<detlb1 value="28.4"/>
				<wlb1 value="14.2"/>
				<hlb1 value="112.9"/>
				<thetalb1 value="195.4"/>
				<nlb2 value="2.33"/>
				<detlb2 value="14.7"/>
				<wlb2 value="15.6"/>
				<hlb2 value="43.6"/>
				<thetalb2 value="278.2"/>
			</localbubble>
			<loopi>
				<nli value="1.907"/>
				<rli value="80.0"/>
				<wli value="15.0"/>
				<detthetali value="30.0"/>
				<thetali value="40.0"/>
			</loopi>
		</ymw16>
		
		<dft cue="0" seed="0"> <!-- default random (optional) -->
			<rms value="1.0"/>
			<k0 value="2.0"/> <!-- cutoff 1/Lambda, kpc -->
			<a0 value="-1.7"/>
			<!-- field strength rescaling -->
			<r0 value="8.0"/> <!-- kpc -->
			<z0 value="1.0"/> <!-- kpc -->
		</dft>
		
	</temodel>
	
	<cremodel> <!-- cosmic-ray electron, flux norm comes with unit [GeV m^2 s Sr]^-1 -->
        	<!-- model component can be activated by the boolean button: cue="1" -->
        	<!-- superposition of field models is NOT allowed -->
		<unif cue="1"> <!-- uniform (optional) -->
			<alpha value="3.0"/>
			<r0 value="3.0"/> <!-- galactic spherical frame cutoff radius, kpc -->
			<!-- by default, we choose AMS02 20.6GeV as the flux reference -->
			<e0 value="20.6"/> <!-- CRE total energy reference, GeV -->
			<j0 value="0.0217"/> <!-- local CRE flux norm factor @ e0 -->
		</unif>
		
		<pwrlaw cue="0"> <!-- power-law (optional) -->
            		<!-- spatial scaling is defined in the galactic cylindric frame -->
			<!-- CRE spectral index: -alpha+beta*r+theta*z -->
			<alpha value="3.0"/>
			<beta value="0.0"/>
			<theta value="0.0"/>
			<r0 value="5.0"/> <!-- kpc -->
			<z0 value="1.0"/> <!-- kpc -->
			<!-- by default, we choose AMS02 result @ 20.6GeV -->
			<e0 value="20.6"/> <!-- CRE kinetic energy reference, GeV -->
			<j0 value="0.0217"/> <!-- local CRE flux norm factor @ e0 -->
		</pwrlaw>
		
	</cremodel>
	
</root>
